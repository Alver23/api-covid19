{
  "roots": ["<rootDir>/src"],
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": [
    "**/*ts",
    "!**/*-mock.ts",
    "!**/main.ts",
    "!**/*.module.ts"
  ],
  "coveragePathIgnorePatterns": [
    "config/",
    "core/"
  ],
  "testMatch": ["**/?(*.)+(spec).+(ts)"],
  "globals": {
    "ts-jest": {
      "tsConfig": "./tsconfig.spec.json"
    }
  },
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  }
}
