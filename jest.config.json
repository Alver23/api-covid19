{
  "roots": ["<rootDir>/src"],
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "testMatch": ["**/?(*.)+(spec).+(ts)"],
  "globals": {
    "ts-jest": {
      "tsConfig": "./tsconfig.spec.json"
    }
  },
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  }
}
